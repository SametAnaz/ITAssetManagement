@{
    ViewData["Title"] = "E-posta Testi";
}

<div class="container mt-4">
    <h2>E-posta Test Sayfası</h2>



    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Test E-postası Gönder</h5>
            <p class="card-text">
                Bu sayfadan test e-postası gönderebilirsiniz. E-posta, Papercut SMTP sunucusuna gönderilecektir.
            </p>
            <form asp-action="SendTestEmail" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Test E-postası Gönder
                </button>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">SMTP Sunucu Ayarları</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Host:</strong> 127.0.0.1
                </li>
                <li class="list-group-item">
                    <strong>Port:</strong> 25
                </li>
                <li class="list-group-item">
                    <strong>SSL:</strong> Kapalı
                </li>
                <li class="list-group-item">
                    <strong>Test E-posta:</strong> test@local.dev
                </li>
            </ul>
        </div>
    </div>
</div>