@{
    ViewData["Title"] = "Email Test";
}

<div class="container mt-4">
    <h2>Email Test Sayfası</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Test Email Gönder</h5>
            <p class="card-text">
                Bu sayfadan test email gönderebilirsiniz. Email, Papercut SMTP sunucusuna gönderilecektir.
            </p>
            <form asp-action="SendTestEmail" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i>Test Email Gönder
                </button>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Papercut SMTP Ayarları</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Host:</strong> 127.0.0.1
                </li>
                <li class="list-group-item">
                    <strong>Port:</strong> 25
                </li>
                <li class="list-group-item">
                    <strong>SSL:</strong> Kapalı
                </li>
                <li class="list-group-item">
                    <strong>Test Email:</strong> test@local.dev
                </li>
            </ul>
        </div>
    </div>
</div>