@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.Laptop>

@{
    ViewData["Title"] = "Ana Sayfa";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="text-center">
    <h1 class="display-4">IT Varlık Yönetimi'ne Hoş Geldiniz</h1>
    <p>Kurumunuzdaki IT varlıklarını yönetmek için kapsamlı bir çözüm.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Son Eklenen Varlıklar</h2>
        <hr />
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <label class="me-2">Sayfa başına kayıt:</label>
                <select id="pageSize" class="form-select form-select-sm d-inline-block" style="width: auto;" 
                        onchange="window.location.href='@Url.Action("Index", new { pageNumber = 1, pageSize = "__ps__", sortBy = ViewBag.CurrentSortBy, sortDirection = ViewBag.CurrentSortDirection })'.replace('__ps__', this.value)">
                    @foreach (var size in ViewBag.PageSizeOptions)
                    {
                        if (size == ViewBag.CurrentPageSize)
                        {
                            <option value="@size" selected="selected">@size</option>
                        }
                        else
                        {
                            <option value="@size">@size</option>
                        }
                    }
                </select>
            </div>
            <div>
                Toplam @Model.TotalItems kayıttan @((Model.PageIndex - 1) * ViewBag.CurrentPageSize + 1) - @(Math.Min(Model.PageIndex * ViewBag.CurrentPageSize, Model.TotalItems)) arası gösteriliyor
            </div>
        </div>

        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="id"
                                   asp-route-sortDirection="@ViewBag.IdSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    ID
                                    @if (ViewBag.CurrentSortBy?.ToString().ToLower() == "id")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="EtiketNo"
                                   asp-route-sortDirection="@ViewBag.EtiketNoSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    Etiket No
                                    @if (ViewBag.CurrentSortBy == "EtiketNo")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="Marka"
                                   asp-route-sortDirection="@ViewBag.MarkaSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    Marka
                                    @if (ViewBag.CurrentSortBy == "Marka")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="Model"
                                   asp-route-sortDirection="@ViewBag.ModelSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    Model
                                    @if (ViewBag.CurrentSortBy == "Model")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="Durum"
                                   asp-route-sortDirection="@ViewBag.DurumSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    Durum
                                    @if (ViewBag.CurrentSortBy == "Durum")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="KayitTarihi"
                                   asp-route-sortDirection="@ViewBag.KayitTarihiSort"
                                   class="text-decoration-none d-flex align-items-center sortable-header">
                                    Kayıt Tarihi
                                    @if (ViewBag.CurrentSortBy == "KayitTarihi")
                                    {
                                        @if (ViewBag.CurrentSortDirection == "asc")
                                        {
                                            <i class="fas fa-sort-up ms-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort-down ms-1"></i>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var laptop in Model!)
                        {
                            <tr>
                                <td>@laptop.Id</td>
                                <td>@laptop.EtiketNo</td>
                                <td>@laptop.Marka</td>
                                <td>@laptop.Model</td>
                                <td>@laptop.Durum</td>
                                <td>@laptop.KayitTarihi.ToShortDateString()</td>
                                <td>
                                    <a class="ITn ITn-sm ITn-info" asp-controller="Laptops" asp-action="Details" asp-route-id="@laptop.Id">
                                        <i class="fas fa-info-circle me-1"></i> Detaylar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation" class="mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        Sayfa @Model.PageIndex / @Model.TotalPages (@Model.TotalItems toplam kayıt)
                    </div>
                    <ul class="pagination mb-0">
                        <li class="page-item @prevDisabled">
                            <a class="page-link" asp-action="Index" 
                               asp-route-pageNumber="@(Model.PageIndex - 1)"
                               asp-route-pageSize="@ViewBag.CurrentPageSize"
                               asp-route-sortBy="@ViewBag.CurrentSortBy"
                               asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-pageNumber="@i"
                                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                                   asp-route-sortBy="@ViewBag.CurrentSortBy"
                                   asp-route-sortDirection="@ViewBag.CurrentSortDirection">@i</a>
                            </li>
                        }
                        <li class="page-item @nextDisabled">
                            <a class="page-link" asp-action="Index" 
                               asp-route-pageNumber="@(Model.PageIndex + 1)"
                               asp-route-pageSize="@ViewBag.CurrentPageSize"
                               asp-route-sortBy="@ViewBag.CurrentSortBy"
                               asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Sistemde henüz kayıtlı varlık bulunmamaktadır.
            </div>
        }
    </div>
</div>

<style>
    .table th a {
        cursor: pointer;
    }
    
    .table th a:hover {
        color: #0056b3 !important;
    }
    
    .table th a:hover i {
        color: #0056b3 !important;
    }
    
    .table th {
        user-select: none;
    }

    /* Açık tema için */
    [data-bs-theme="light"] .table th a {
        color: #212529 !important;
    }

    [data-bs-theme="light"] .table th a:hover {
        color: #0056b3 !important;
    }

    /* Karanlık tema için */
    [data-bs-theme="dark"] .table th a {
        color: #ffffff !important;
    }

    [data-bs-theme="dark"] .table th a:hover {
        color: #6ea8fe !important;
    }

    [data-bs-theme="dark"] .table th a:hover i {
        color: #6ea8fe !important;
    }

    [data-bs-theme="dark"] .table th a i {
        color: #ffffff !important;
    }
</style>
