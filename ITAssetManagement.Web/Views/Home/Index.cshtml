@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to IT Asset Management</h1>
    <p>A comprehensive solution for managing IT assets in your organization.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Latest Assets</h2>
        <hr />
        <!-- List of laptops will go here -->
        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tag Number</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Status</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var laptop in Model!)
                        {
                            <tr>
                                <td>@laptop.EtiketNo</td>
                                <td>@laptop.Marka</td>
                                <td>@laptop.Model</td>
                                <td>@laptop.Durum</td>
                                <td>@laptop.KayitTarihi.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="#">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No assets found in the system.</p>
        }
    </div>
</div>
