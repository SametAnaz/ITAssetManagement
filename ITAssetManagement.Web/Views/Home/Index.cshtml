@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.Laptop>

@{
    ViewData["Title"] = "Ana Sayfa";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="text-center">
    <h1 class="display-4">BT Varlık Yönetimi'ne Hoş Geldiniz</h1>
    <p>Kurumunuzdaki BT varlıklarını yönetmek için kapsamlı bir çözüm.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Son Eklenen Varlıklar</h2>
        <hr />
        <!-- List of laptops will go here -->
        @if (Model?.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Etiket No</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var laptop in Model!)
                        {
                            <tr>
                                <td>@laptop.EtiketNo</td>
                                <td>@laptop.Marka</td>
                                <td>@laptop.Model</td>
                                <td>@laptop.Durum</td>
                                <td>@laptop.KayitTarihi.ToShortDateString()</td>
                                <td>
                                    <a class="btn btn-sm btn-info" asp-controller="Laptops" asp-action="Details" asp-route-id="@laptop.Id">
                                        <i class="fas fa-info-circle me-1"></i> Detaylar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation" class="mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        Sayfa @Model.PageIndex / @Model.TotalPages (@Model.TotalItems toplam kayıt)
                    </div>
                    <ul class="pagination mb-0">
                        <li class="page-item @prevDisabled">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @nextDisabled">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Sistemde henüz kayıtlı varlık bulunmamaktadır.
            </div>
        }
    </div>
</div>
