@model ITAssetManagement.Web.Models.Assignment

@{
    ViewData["Title"] = "Atama Düzenle";
}

<h1>Laptop Ataması Düzenle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="UserId" class="control-label">Kullanıcı</label>
                <select asp-for="UserId" class="form-control select2-user" 
                    asp-items="@(new SelectList(ViewBag.Users, "Id", "FullName"))"
                    data-placeholder="Kullanıcı adı yazın veya listeden seçin...">
                    <option value="">-- Kullanıcı Seçin --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
                <small class="form-text text-muted">Kullanıcı adını yazmaya başlayın, otomatik filtreleme yapılacaktır.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LaptopId" class="control-label">Laptop</label>
                <select asp-for="LaptopId" class="form-control select2-laptop" 
                    asp-items="@(new SelectList(ViewBag.Laptops, "Id", "DisplayName"))"
                    data-placeholder="Laptop marka, model veya etiket no yazın...">
                    <option value="">-- Laptop Seçin --</option>
                </select>
                <span asp-validation-for="LaptopId" class="text-danger"></span>
                <small class="form-text text-muted">Laptop marka, model veya etiket numarasını yazmaya başlayın.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AssignmentDate" class="control-label">Atama Tarihi</label>
                <input asp-for="AssignmentDate" class="form-control" type="date" />
                <span asp-validation-for="AssignmentDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReturnDate" class="control-label">İade Tarihi (Opsiyonel)</label>
                <input asp-for="ReturnDate" class="form-control" type="date" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Kullanıcı dropdown'ını Select2 ile başlat
            $('.select2-user').select2({
                theme: 'bootstrap-5',
                placeholder: 'Kullanıcı adı yazın veya listeden seçin...',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Sonuç bulunamadı";
                    },
                    searching: function() {
                        return "Aranıyor...";
                    },
                    inputTooShort: function() {
                        return "En az 1 karakter girin";
                    }
                }
            });

            // Laptop dropdown'ını Select2 ile başlat
            $('.select2-laptop').select2({
                theme: 'bootstrap-5',
                placeholder: 'Laptop marka, model veya etiket no yazın...',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Sonuç bulunamadı";
                    },
                    searching: function() {
                        return "Aranıyor...";
                    },
                    inputTooShort: function() {
                        return "En az 1 karakter girin";
                    }
                }
            });

            // Form submit edildiğinde Select2'yi temizle
            $('form').on('submit', function() {
                $('.select2-user').select2('destroy');
                $('.select2-laptop').select2('destroy');
            });
        });
    </script>
    
    <style>
        /* Select2 özelleştirmeleri */
        .select2-container--bootstrap-5 .select2-selection {
            min-height: 38px;
        }
        
        .select2-container--bootstrap-5 .select2-selection--single .select2-selection__rendered {
            padding-top: 6px;
        }
        
        .select2-container--bootstrap-5 .select2-selection--single .select2-selection__arrow {
            top: 6px;
        }
    </style>
}
