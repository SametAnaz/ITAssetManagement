@model IEnumerable<ITAssetManagement.Web.Models.Assignment>

@{
    ViewData["Title"] = "Zimmet Listesi";
}

<h1>Zimmet Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle me-1"></i>Yeni Zimmet Oluştur
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Laptop</th>
            <th>Atama Tarihi</th>
            <th>İade Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(item.User?.FullName ?? "-")</td>
            <td>@(item.Laptop != null ? $"{item.Laptop.Marka} {item.Laptop.Model} (ID: {item.Laptop.Id})" : "-")</td>
            <td>@item.AssignmentDate.ToShortDateString()</td>
            <td>@(item.ReturnDate?.ToShortDateString() ?? "-")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit me-1"></i>Düzenle
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                    <i class="fas fa-info-circle me-1"></i>Detaylar
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                    <i class="fas fa-trash me-1"></i>Sil
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
