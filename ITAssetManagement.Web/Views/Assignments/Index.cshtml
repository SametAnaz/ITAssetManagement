@using ITAssetManagement.Web.Extensions
@model PaginatedList<ITAssetManagement.Web.Models.Assignment>

@{
    ViewData["Title"] = "Zimmet Listesi";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = ViewData["CurrentFilter"]?.ToString();
}

<h1>Zimmet Listesi</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="hidden" name="pageSize" value="@ViewBag.CurrentPageSize" />
            <input type="text" name="searchTerm" id="searchInput" class="form-control me-2" value="@ViewData["CurrentFilter"]" 
                   placeholder="Kullanıcı adı, laptop marka, model ile arama yapın..." />
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>Ara
            </button>
            @if (ViewData["CurrentFilter"]?.ToString() is string filter && !string.IsNullOrEmpty(filter))
            {
                <a asp-action="Index" asp-route-pageSize="@ViewBag.CurrentPageSize" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Temizle
                </a>
            }
        </form>
    </div>
    <div class="col-md-4">
        <div class="d-flex align-items-center">
            <label class="me-2">Sayfa başına:</label>
            <select id="pageSize" class="form-select form-select-sm" style="width: auto;" 
                    onchange="window.location.href='@Url.Action("Index", new { pageNumber = 1, pageSize = "__ps__", searchTerm = ViewData["CurrentSearch"] })'.replace('__ps__', this.value)">
                @foreach (var size in ViewBag.PageSizeOptions)
                {
                    if (size == ViewBag.CurrentPageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Yeni Zimmet Oluştur
            </a>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-upload me-1"></i>Export
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-action="ExportToExcel">
                        <i class="fas fa-file-excel me-2"></i>Excel Format
                    </a></li>
                    <li><a class="dropdown-item" asp-action="ExportToCsv">
                        <i class="fas fa-file-csv me-2"></i>CSV Format
                    </a></li>
                </ul>
            </div>
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-download me-1"></i>Import
            </button>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Kullanıcı</th>
                <th>Laptop</th>
                <th>Atama Tarihi</th>
                <th>İade Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.User?.FullName ?? "-")</td>
                        <td>@(item.Laptop != null ? $"{item.Laptop.Marka} {item.Laptop.Model} (ID: {item.Laptop.Id})" : "-")</td>
                        <td>@item.AssignmentDate.ToShortDateString()</td>
                        <td>@(item.ReturnDate?.ToShortDateString() ?? "-")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle me-1"></i>Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">
            Toplam @Model.TotalItems kayıttan @((Model.PageIndex - 1) * ViewBag.CurrentPageSize + 1) - @(Math.Min(Model.PageIndex * ViewBag.CurrentPageSize, Model.TotalItems)) arası gösteriliyor
        </div>
        <ul class="pagination mb-0">
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@ViewBag.CurrentPageSize"
                       asp-route-searchTerm="@ViewData["CurrentSearch"]">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">
                    <i class="fas fa-upload me-2"></i>Zimmet Verilerini Import Et
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Import" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="importFile" class="form-label">Dosya Seçin</label>
                        <input type="file" class="form-control" id="importFile" name="file" accept=".csv,.xlsx" required>
                        <div class="form-text">
                            <strong>Desteklenen formatlar:</strong> CSV (.csv) ve Excel (.xlsx)<br>
                            <strong>Gerekli kolonlar:</strong> KullaniciId, LaptopId, ZimmetTarihi, TeslimTarihi, ZimmetDurumu<br>
                            <strong>Excel Import:</strong> Artık gerçek Excel dosyaları (.xlsx) desteklenir!
                        </div>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>En İyi Sonuç İçin:</strong><br>
                        1. Bu sayfadan "Export → CSV Format" ile veri indirin<br>
                        2. CSV dosyasını düzenleyin<br>
                        3. Aynı CSV dosyasını import edin<br>
                        4. Zorunda olmadikca "TeslimTarihi" kolonunu boş bırakın, sistem otomatik olarak atama tarihini kullanacaktır.<br>
                        5. Mümkün oldukça bu sayfadaki import/export işlevini yedekleme için kullanın.
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Dikkat:</strong> Import işlemi sırasında mevcut veriler korunur. 
                        Aynı kimlik numarasına sahip kayıtlar güncellenir, yeni kayıtlar eklenir.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload me-1"></i>Import Et
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
