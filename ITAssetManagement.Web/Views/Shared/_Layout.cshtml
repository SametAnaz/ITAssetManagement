<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT Varlık Yönetimi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light" data-bs-theme="light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-glass">
            <div class="container-fluid px-3">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop-code"></i>
                    <span>IT Varlık Yönetimi</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>Ana Sayfa</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Laptops" asp-action="Index">
                                <i class="fas fa-laptop"></i>
                                <span>Bilgisayarlar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Laptops" asp-action="DeletedLaptops">
                                <i class="fas fa-trash-alt"></i>
                                <span>Silinen Cihazlar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Index">
                                <i class="fas fa-users"></i>
                                <span>Personel Listesi</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Assignments" asp-action="Index">
                                <i class="fas fa-tasks"></i>
                                <span>Zimmetler</span>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <a class="nav-link me-2" asp-controller="EmailTest" asp-action="Index">
                            <i class="fas fa-envelope"></i>
                            <span>E-posta Testi</span>
                        </a>
                        <button id="themeToggle" class="nav-link" type="button">
                            <i class="fas fa-sun" id="themeIcon"></i>
                        </button>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Çıkış Yap</span>
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 mt-auto">
        <div class="container text-center">
            <span class="text-muted">
                <i class="fas fa-code me-1"></i> IT Varlık Yönetimi &copy; @DateTime.Now.Year
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Toastr ayarları
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "preventDuplicates": true,
            "showDuration": "300",
            "hideDuration": "1000"
        };

        // TempData mesajlarını kontrol et ve göster
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            toastr.success('@TempData["SuccessMessage"]', 'Başarılı');
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            toastr.error('@TempData["ErrorMessage"]', 'Hata');
            </text>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <text>
            toastr.info('@TempData["InfoMessage"]', 'Bilgi');
            </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
