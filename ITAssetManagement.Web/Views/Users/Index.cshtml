@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.User>

@{
    ViewData["Title"] = "Kullanıcılar";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<h1>Kullanıcılar</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="text" name="searchTerm" id="searchInput" class="form-control me-2" value="@ViewData["CurrentFilter"]" 
                   placeholder="Ad, email, departman veya pozisyon ile arama yapın..." />
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>Ara
            </button>
            @if (ViewData["CurrentFilter"]?.ToString() is string filter && !string.IsNullOrEmpty(filter))
            {
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Temizle
                </a>
            }
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus me-1"></i>Yeni Kullanıcı Ekle
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().Department)</th>
                <th>@Html.DisplayNameFor(model => model.First().Position)</th>
                <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Any() == true)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.Position)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle me-1"></i>Detay
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Henüz kullanıcı bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-searchTerm="@ViewData["CurrentFilter"]"
               class="btn btn-outline-primary @prevDisabled">
                <i class="fas fa-chevron-left me-1"></i>
                Önceki
            </a>
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-searchTerm="@ViewData["CurrentFilter"]"
               class="btn btn-outline-primary @nextDisabled">
                Sonraki
                <i class="fas fa-chevron-right ms-1"></i>
            </a>
        </div>
        <div class="text-muted">
            Sayfa @Model.PageIndex / @Model.TotalPages
        </div>
    </div>
</nav>
