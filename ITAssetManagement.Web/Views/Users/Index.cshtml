@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.User>

@{
    ViewData["Title"] = "Kullanıcılar";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<style>
    .table-sort-link {
        color: inherit;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .table-sort-link:hover {
        color: #0d6efd;
        text-decoration: none;
    }
    
    .table-header {
        background-color: var(--bs-light);
    }
    
    [data-bs-theme="dark"] .table-header {
        background-color: var(--bs-dark);
    }
    
    [data-bs-theme="dark"] .table-sort-link {
        color: #ffffff;
    }
    
    [data-bs-theme="dark"] .table-sort-link:hover {
        color: #86b7fe;
    }
</style>

<h1>Kullanıcılar</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="hidden" name="pageSize" value="@ViewBag.CurrentPageSize" />
            <input type="hidden" name="sortBy" value="@ViewBag.CurrentSortBy" />
            <input type="hidden" name="sortDirection" value="@ViewBag.CurrentSortDirection" />
            <input type="text" name="searchTerm" id="searchInput" class="form-control me-2" value="@ViewData["CurrentFilter"]" 
                   placeholder="Ad, email, departman veya pozisyon ile arama yapın..." />
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>Ara
            </button>
            @if (ViewData["CurrentFilter"]?.ToString() is string filter && !string.IsNullOrEmpty(filter))
            {
                <a asp-action="Index" asp-route-pageSize="@ViewBag.CurrentPageSize" asp-route-sortBy="@ViewBag.CurrentSortBy" asp-route-sortDirection="@ViewBag.CurrentSortDirection" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Temizle
                </a>
            }
        </form>
    </div>
    <div class="col-md-4">
        <div class="d-flex align-items-center">
            <label class="me-2">Sayfa başına:</label>
            <select id="pageSize" class="form-select form-select-sm" style="width: auto;" 
                    onchange="window.location.href='@Url.Action("Index", new { pageNumber = 1, pageSize = "__ps__", searchTerm = ViewData["CurrentSearch"], sortBy = ViewBag.CurrentSortBy, sortDirection = ViewBag.CurrentSortDirection })'.replace('__ps__', this.value)">
                @foreach (var size in ViewBag.PageSizeOptions)
                {
                    if (size == ViewBag.CurrentPageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-user-plus me-1"></i>Yeni Kullanıcı Ekle
            </a>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-upload me-1"></i>Export
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-action="ExportToExcel">
                        <i class="fas fa-file-excel me-2"></i>Excel Format
                    </a></li>
                    <li><a class="dropdown-item" asp-action="ExportToCsv">
                        <i class="fas fa-file-csv me-2"></i>CSV Format
                    </a></li>
                </ul>
            </div>
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-download me-1"></i>Import
            </button>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-header">
            <tr>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "id", 
                        sortDirection = ViewBag.CurrentSortBy == "id" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        ID
                        @if (ViewBag.CurrentSortBy == "id")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "fullname", 
                        sortDirection = ViewBag.CurrentSortBy == "fullname" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        Ad Soyad
                        @if (ViewBag.CurrentSortBy == "fullname")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "email", 
                        sortDirection = ViewBag.CurrentSortBy == "email" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        Email
                        @if (ViewBag.CurrentSortBy == "email")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "department", 
                        sortDirection = ViewBag.CurrentSortBy == "department" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        Departman
                        @if (ViewBag.CurrentSortBy == "department")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "position", 
                        sortDirection = ViewBag.CurrentSortBy == "position" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        Pozisyon
                        @if (ViewBag.CurrentSortBy == "position")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { 
                        sortBy = "phone", 
                        sortDirection = ViewBag.CurrentSortBy == "phone" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                        pageNumber = 1, 
                        pageSize = ViewBag.CurrentPageSize, 
                        searchTerm = ViewData["CurrentSearch"] 
                    })" class="table-sort-link">
                        Telefon
                        @if (ViewBag.CurrentSortBy == "phone")
                        {
                            <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                        }
                        else
                        {
                            <i class="fas fa-sort text-muted"></i>
                        }
                    </a>
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Any() == true)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.Position)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle me-1"></i>Detay
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Henüz kullanıcı bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">
            Toplam @Model.TotalItems kayıttan @((Model.PageIndex - 1) * ViewBag.CurrentPageSize + 1) - @(Math.Min(Model.PageIndex * ViewBag.CurrentPageSize, Model.TotalItems)) arası gösteriliyor
        </div>
        <ul class="pagination mb-0">
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]"
                   asp-route-sortBy="@ViewBag.CurrentSortBy"
                   asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@ViewBag.CurrentPageSize"
                       asp-route-searchTerm="@ViewData["CurrentSearch"]"
                       asp-route-sortBy="@ViewBag.CurrentSortBy"
                       asp-route-sortDirection="@ViewBag.CurrentSortDirection">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-pageSize="@ViewBag.CurrentPageSize"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]"
                   asp-route-sortBy="@ViewBag.CurrentSortBy"
                   asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">
                    <i class="fas fa-download me-2"></i>Kullanıcı Verilerini Import Et
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Import" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="importFile" class="form-label">Dosya Seçin</label>
                        <input type="file" class="form-control" id="importFile" name="file" accept=".csv,.xlsx" required>
                        <div class="form-text">
                            <strong>Desteklenen formatlar:</strong> CSV (.csv) ve Excel (.xlsx)<br>
                            <strong>Gerekli kolonlar:</strong> AdSoyad, Email, Telefon, Departman, Pozisyon<br>
                            <strong>Excel Import:</strong> Gerçek Excel dosyaları (.xlsx) desteklenir!
                        </div>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>En İyi Sonuç İçin:</strong><br>
                        1. Bu sayfadan "Export → CSV Format" ile veri indirin<br>
                        2. CSV dosyasını düzenleyin<br>
                        3. Aynı CSV dosyasını import edin
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Dikkat:</strong> Import işlemi sırasında mevcut veriler korunur. 
                        Aynı email adresine sahip kayıtlar güncellenmez, yeni kayıtlar eklenir.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-download me-1"></i>Import Et
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .table th a {
        cursor: pointer;
    }
    
    .table th a:hover {
        color: #0056b3 !important;
    }
    
    .table th a:hover i {
        color: #0056b3 !important;
    }
    
    .table th {
        user-select: none;
    }

    /* Açık tema için */
    [data-bs-theme="light"] .table th a {
        color: #212529 !important;
    }

    [data-bs-theme="light"] .table th a:hover {
        color: #0056b3 !important;
    }

    /* Karanlık tema için */
    [data-bs-theme="dark"] .table th a {
        color: #ffffff !important;
    }

    [data-bs-theme="dark"] .table th a:hover {
        color: #6ea8fe !important;
    }

    [data-bs-theme="dark"] .table th a:hover i {
        color: #6ea8fe !important;
    }

    [data-bs-theme="dark"] .table th a i {
        color: #ffffff !important;
    }
</style>
