@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.Laptop>

@{
    ViewData["Title"] = "Silinmiş Laptoplar";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = ViewData["CurrentFilter"]?.ToString();
}

<style>
    .table-sort-link {
        color: inherit;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .table-sort-link:hover {
        color: #0d6efd;
        text-decoration: none;
    }
    
    .table-header {
        background-color: var(--bs-light);
    }
    
    [data-bs-theme="dark"] .table-header {
        background-color: var(--bs-dark);
    }
    
    [data-bs-theme="dark"] .table-sort-link {
        color: #ffffff;
    }
    
    [data-bs-theme="dark"] .table-sort-link:hover {
        color: #86b7fe;
    }
</style>

<h1>Silinmiş Laptoplar</h1>

@* TempData Mesajları *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="DeletedLaptops" method="get" class="d-flex" id="searchForm">
            <input type="hidden" name="pageSize" value="@ViewBag.CurrentPageSize" />
            <input type="hidden" name="sortBy" value="@ViewBag.CurrentSortBy" />
            <input type="hidden" name="sortDirection" value="@ViewBag.CurrentSortDirection" />
            <input type="text" name="searchTerm" id="searchInput" class="form-control me-2" value="@ViewData["CurrentFilter"]" 
                   placeholder="Marka, model, ID, etiket no, silme nedeni ile arama yapın..." />
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>Ara
            </button>
            @if (ViewData["CurrentFilter"]?.ToString() is string filter && !string.IsNullOrEmpty(filter))
            {
                <a asp-action="DeletedLaptops" asp-route-pageSize="@ViewBag.CurrentPageSize" 
                   asp-route-sortBy="@ViewBag.CurrentSortBy" 
                   asp-route-sortDirection="@ViewBag.CurrentSortDirection" 
                   class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Temizle
                </a>
            }
        </form>
    </div>
    <div class="col-md-4">
        <div class="d-flex align-items-center">
            <label class="me-2">Sayfa başına:</label>
            <select id="pageSize" class="form-select form-select-sm" style="width: auto;" 
                    onchange="window.location.href='@Url.Action("DeletedLaptops", new { pageNumber = 1, pageSize = "__ps__", searchTerm = ViewData["CurrentSearch"], sortBy = ViewBag.CurrentSortBy, sortDirection = ViewBag.CurrentSortDirection })'.replace('__ps__', this.value)">
                @foreach (var size in ViewBag.PageSizeOptions)
                {
                    if (size == ViewBag.CurrentPageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Aktif Laptoplara Dön
        </a>
    </div>
</div>

@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-header">
                <tr>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "id", 
                            sortDirection = ViewBag.CurrentSortBy == "id" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            ID
                            @if (ViewBag.CurrentSortBy == "id")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "etiketno", 
                            sortDirection = ViewBag.CurrentSortBy == "etiketno" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Etiket No
                            @if (ViewBag.CurrentSortBy == "etiketno")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "marka", 
                            sortDirection = ViewBag.CurrentSortBy == "marka" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Marka
                            @if (ViewBag.CurrentSortBy == "marka")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "model", 
                            sortDirection = ViewBag.CurrentSortBy == "model" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Model
                            @if (ViewBag.CurrentSortBy == "model")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "durum", 
                            sortDirection = ViewBag.CurrentSortBy == "durum" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Durum
                            @if (ViewBag.CurrentSortBy == "durum")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "kayittarihi", 
                            sortDirection = ViewBag.CurrentSortBy == "kayittarihi" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Kayıt Tarihi
                            @if (ViewBag.CurrentSortBy == "kayittarihi")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("DeletedLaptops", new { 
                            sortBy = "silinmetarihi", 
                            sortDirection = ViewBag.CurrentSortBy == "silinmetarihi" && ViewBag.CurrentSortDirection == "asc" ? "desc" : "asc", 
                            pageNumber = 1, 
                            pageSize = ViewBag.CurrentPageSize, 
                            searchTerm = ViewData["CurrentSearch"] 
                        })" class="table-sort-link">
                            Silinme Tarihi
                            @if (ViewBag.CurrentSortBy == "silinmetarihi")
                            {
                                <i class="fas @(ViewBag.CurrentSortDirection == "asc" ? "fa-sort-up" : "fa-sort-down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort text-muted"></i>
                            }
                        </a>
                    </th>
                    <th>Silme Nedeni</th>
                    <th>Silen Kullanıcı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@Html.DisplayFor(modelItem => item.EtiketNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Marka)</td>
                        <td>@Html.DisplayFor(modelItem => item.Model)</td>
                        <td>
                            <span class="badge bg-secondary">@item.Durum</span>
                        </td>
                        <td>@item.KayitTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.SilinmeTarihi.HasValue)
                            {
                                @item.SilinmeTarihi.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.SilmeNedeni))
                            {
                                <span class="text-truncate" style="max-width: 200px;" title="@item.SilmeNedeni">
                                    @item.SilmeNedeni
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.SilenKullanici))
                            {
                                @item.SilenKullanici
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <form asp-action="RestoreLaptop" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-success" 
                                            onclick="return confirm('Bu laptop'ı geri yüklemek istediğinizden emin misiniz?')">
                                        <i class="fas fa-undo me-1"></i>Geri Yükle
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation" class="mt-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted">
                    Toplam @Model.TotalItems kayıttan @((Model.PageIndex - 1) * ViewBag.CurrentPageSize + 1) - @(Math.Min(Model.PageIndex * ViewBag.CurrentPageSize, Model.TotalItems)) arası gösteriliyor
                </div>
                <ul class="pagination mb-0">
                    <li class="page-item @prevDisabled">
                        <a class="page-link" asp-action="DeletedLaptops" 
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-pageSize="@ViewBag.CurrentPageSize"
                           asp-route-searchTerm="@ViewData["CurrentSearch"]"
                           asp-route-sortBy="@ViewBag.CurrentSortBy"
                           asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="DeletedLaptops" 
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="@ViewBag.CurrentPageSize"
                               asp-route-searchTerm="@ViewData["CurrentSearch"]"
                               asp-route-sortBy="@ViewBag.CurrentSortBy"
                               asp-route-sortDirection="@ViewBag.CurrentSortDirection">@i</a>
                        </li>
                    }
                    <li class="page-item @nextDisabled">
                        <a class="page-link" asp-action="DeletedLaptops" 
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-pageSize="@ViewBag.CurrentPageSize"
                           asp-route-searchTerm="@ViewData["CurrentSearch"]"
                           asp-route-sortBy="@ViewBag.CurrentSortBy"
                           asp-route-sortDirection="@ViewBag.CurrentSortDirection">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Silinmiş Laptop Yok</h4>
        <p>Henüz hiç laptop silinmemiş.</p>
    </div>
}
