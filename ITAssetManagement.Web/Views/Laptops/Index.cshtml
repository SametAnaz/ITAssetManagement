@model ITAssetManagement.Web.Extensions.PaginatedList<ITAssetManagement.Web.Models.Laptop>

@{
    ViewData["Title"] = "Dizüstü Bilgisayarlar";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = ViewData["CurrentFilter"]?.ToString();
}

<h1>Dizüstü Bilgisayarlar</h1>



<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex" id="searchForm">
            <input type="text" name="searchTerm" id="searchInput" class="form-control me-2" value="@ViewData["CurrentFilter"]" 
                   placeholder="Marka, model, ID veya etiket numarası ile arama yapın..." />
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search me-1"></i>Ara
            </button>
            @if (ViewData["CurrentFilter"]?.ToString() is string filter && !string.IsNullOrEmpty(filter))
            {
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Temizle
                </a>
            }
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Yeni Ekle
        </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Etiket No</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Durum</th>
                <th>Zimmetli Kullanıcı</th>
                <th>Kayıt Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.EtiketNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Marka)</td>
                        <td>@Html.DisplayFor(modelItem => item.Model)</td>
                        <td>@Html.DisplayFor(modelItem => item.Durum)</td>
                        <td>
                            @if (item.CurrentAssignment?.User != null)
                            {
                                @Html.DisplayFor(modelItem => item.CurrentAssignment.User.FullName)
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.KayitTarihi)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle me-1"></i>Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
